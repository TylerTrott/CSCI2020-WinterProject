<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" minHeight="250.0" minWidth="285.0" prefHeight="320.0" prefWidth="300.0" spacing="20.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tictactoe.chat">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Chat with a friend!">
        <font>
            <Font name="Calibri Bold" size="23.0" />
        </font>
    </Text>
    <TextField fx:id="username" promptText="Enter Username">
        <font>
            <Font name="Calibri" size="13.0" />
        </font></TextField>  <!--Username (a string) -->
    <TextArea fx:id="sendText" promptText="Enter Text To Send">
        <font>
            <Font name="Calibri" size="13.0" />
        </font></TextArea>
   <TextField fx:id="receivedText" promptText="Received Text from -Friend-">
      <font>
         <Font name="Calibri" size="13.0" />
      </font>
   </TextField>  <!--Password (a string)  -->
    <Button fx:id="sendBtn" onAction="#onSendMsgClick" text="Send Message">
        <font>
            <Font name="Calibri" size="14.0" />
        </font></Button>
    <Button onAction="#onChatReturnClick" text="Return to Main">
        <font>
            <Font name="Calibri" size="14.0" />
        </font></Button>
</VBox>
