<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="236.0" prefWidth="208.0" spacing="20.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tictactoe.TicTacToeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <GridPane prefHeight="41.0" prefWidth="258.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
        <children>
            <ImageView fitHeight="57.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" GridPane.halignment="LEFT" GridPane.valignment="CENTER">
                <image>
                    <Image url="@../../../build/resources/main/images/cat.png" />
                </image>
                <viewport>
                    <Rectangle2D />
                </viewport>
            </ImageView>
            <!--          <ImageView fitHeight="100.0" fitWidth="100.0" image="/images/cat.png" />-->
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="TicTacToe" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                <font>
                    <Font name="Calibri Bold" size="30.0" />
                </font>
            </Text>
            <ImageView fitHeight="57.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.valignment="CENTER">
                <image>
                    <Image url="@../../../build/resources/main/images/dog.png" />
                </image>
            </ImageView>
        </children>
    </GridPane>

    <Button fx:id="firstLoginBtn" onAction="#onLoginButtonClick" text="Login" />
   <Button fx:id="signUpBtn" onAction="#onSignUpButtonClick" text="Sign Up" />
   <Button fx:id="MainMenuExitBtn" onAction="#onExitButtonClick" text="Exit" />

</VBox>
